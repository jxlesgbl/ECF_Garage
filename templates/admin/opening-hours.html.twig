{% extends 'base.html.twig' %}

{% block title %}Edit Weekly Opening Hours{% endblock %}

{% block body %}

{% include "navbar.html.twig" %}

    <div class="container m-5">
        <h1>Edit Weekly Opening Hours</h1>

        {{ form_start(form) }}

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Day</th>
                    <th>Opening Time</th>
                    <th>Closing Time</th>
                </tr>
            </thead>
            <tbody>
                {% for dayOpeningForm in form.openingHours %}
                    <tr>
                        <td>{{ form_row(dayOpeningForm.dayOfWeek) }}</td>
                        <td>{{ form_widget(dayOpeningForm.openingTime) }}</td>
                        <td>{{ form_widget(dayOpeningForm.closingTime) }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary">Save</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
