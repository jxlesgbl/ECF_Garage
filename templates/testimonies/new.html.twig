{% extends "base.html.twig" %}
{% block body %}
{% include "navbar.html.twig" %}
<div class="m-5">
    <div class="row">
        <div class="col-md-6">
        <h1>Laissez-nous vos impressions!</h1>
            {{ form_start(form) }}
            {{ form_row(form.clientName, {'attr': {'class': 'form-control'}}) }}

            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.note, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.comment, {'attr': {'class': 'form-control mb-3'}}) }}
            <button type="submit" class="btn btn-success">Envoyer</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
