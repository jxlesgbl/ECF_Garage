{% extends "base.html.twig" %}

{% block body %}

{% include "navbar.html.twig" %}

<div class="container m-5">
    <div class="row">

            <div class="col-md-6 mb-3">
                {{ form_start(form) }}
                {{ form_row(form.brand, {'attr': {'class': 'form-control', 'label': 'Marque'}}) }}
                {{ form_row(form.model, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.year, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.mileage, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.caracteristics, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_widget(form.imageFiles, {'attr': {'multiple': 'multiple' , 'class': 'form-control', 'label': 'Photos'}}) }}

                {% if car.imageGallery %}
                    <div class="image-gallery">
                        {% set imageFiles = car.imageGallery|split(',') %}
                        {% for imageFile in imageFiles %}
                            <img src="{{ asset(imageFile) }}" alt="Car Image">
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            {{ form_row(form.save, {'attr': {'class': 'btn btn-success', 'label': 'Publier' }}) }}
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
