{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.isAdmin, {'attr': {'class': 'form-check'}}) }}
        {# <label for="{{ registrationForm.isAdmin.vars.id }}">Admin ?</label> #}

        <button type="submit" class="btn btn-success">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
