<div id="" class="container">

    <div class="card-group">
    <div class="row">
        {% for service in services %}
            <div class="col-md-3 mb-3">
                <div class="card h-100">
                {% if is_granted("ROLE_ADMIN") and service.id is defined %}
                    <a href="{{ path('delete_service', {'id': service.id}) }}" id="delete-car" class="btn btn-danger">Supprimer</a>
                {% endif %}
                    <img src="{{ service.image }}" class="card-img-top" alt="{{ service.nom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ service.nom }}</h5>
                        <div class="">
                            <p>à partir de</p>
                            <strong>{{ service.price }}€</strong>

                        </div>
                        <p class="card-text">{{ service.description }}</p>
                    </div>
                    <div class="m-3">
                        <a href="{{ path('contact', {'subject': service.nom }) }}" class="btn btn-success">Contact</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        {% if is_granted("ROLE_ADMIN") %}
            <div class="col-md-3 mb-3">
                <div class="card h-100">
                <img src="/images/services/autres-prestations.webp" alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Ajout +</h5>
                        <div>
                            <p>à partir de</p>
                            <strong>__€</strong>

                        </div>
                        <p class="card-text">Description</p>
                    </div>
                    <div class="m-3">
                        <a href="{{ path('service_new') }}" class="btn btn-success">Ajouter une prestation</a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
    </div>

</div>

